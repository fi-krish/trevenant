{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "types",
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "ES6"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "paths": {},
    "jsx": "react"
  },
  "files": ["src/index.ts"],
}
